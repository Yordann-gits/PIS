import java.util.Scanner;

public class Main {

public static void main(String[] args) {

    Scanner sc = new Scanner(System.in);
    Shape shape = null;

    System.out.println("Изберете фигура:");
    System.out.println("1 - Правоъгълник");
    System.out.println("2 - Окръжност");
    System.out.println("3 - Многоъгълник");

    int choice = sc.nextInt();

    switch (choice) {

        case 1:
            System.out.print("Ширина: ");
            double w = sc.nextDouble();
            System.out.print("Височина: ");
            double h = sc.nextDouble();
            shape = new Rectangle(w, h);
            break;

        case 2:
            System.out.print("Радиус: ");
            double r = sc.nextDouble();
            shape = new Circle(r);
            break;

        case 3:
            System.out.print("Брой точки: ");
            int n = sc.nextInt();
            Point[] pts = new Point[n];

            for (int i = 0; i < n; i++) {
                System.out.print("Точка " + (i + 1) + " (x y): ");
                int x = sc.nextInt();
                int y = sc.nextInt();
                pts[i] = new Point(x, y);
            }

            shape = new Polygon(pts);
            break;

        default:
            System.out.println("Невалиден избор.");
            return;
    }

    System.out.println("\nПериметър: " + shape.calculatePerimeter());
    System.out.println("Площ: " + shape.calculateArea());
}
}
