import java.util.Scanner;

class Unit {

    // Метод, който връща колко пъти се среща символът
    int calculateOccuranceOfChar(String input, char character) {

        int count = 0;

        // игнориране на разликата между малки и големи букви
        character = Character.toLowerCase(character);
        input = input.toLowerCase();

        for (int i = 0; i < input.length(); i++) {
            if (input.charAt(i) == character) {
                count++;
            }
        }
        return count;
    }
}

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        Unit unit = new Unit();

        String text;
        char symbol;

        // --- въвеждане и валидиране на низа ---
        do {
            System.out.print("Въведете текстов низ: ");
            text = sc.nextLine().trim();

            if (text.isEmpty()) {
                System.out.println("Низът не може да бъде празен! Опитайте отново.");
            }

        } while (text.isEmpty());

        // --- въвеждане и валидиране на символ ---
        while (true) {
            System.out.print("Въведете символ, който да се търси: ");
            String temp = sc.nextLine();

            if (temp.length() == 1) {
                symbol = temp.charAt(0);
                break;
            } else {
                System.out.println("Моля, въведете само ЕДИН символ!");
            }
        }

        // --- изчисляване ---
        int occurrences = unit.calculateOccuranceOfChar(text, symbol);

        // --- резултат ---
        System.out.println("\nТърсен символ: '" + symbol + "'");
        System.out.println("Брой срещания в низа: " + occurrences);
    }
}
